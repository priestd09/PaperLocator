{
  "manifest_version": 2,

  "name": "Paper locator",
  "description": "Paper locator is an easy and universal interface to get immediate access to scientific papers.",
  "version": "0.4.8",

  "permissions": ["tabs", "http://paperlocator.com/"],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "icons": { "48": "icon_48.png",
            "128": "icon_128.png"},

  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "index.html"
  }
}

